<div id="search-img">
	<div id="search-img-overlay">
		<h3>Find restaurants</h3>
		<br/>
			<%= form_tag("/results", method: "get") do %>
				<div class="form-group">
					<%= label_tag(:term, "What") %>
					<%= text_field_tag(:term, "", class: "form-control", id: "search-input") %>
				</div>
				<div class="form-group">
					<%= label_tag(:location, "Where") %>
					<%= text_field_tag(:location, "", class: "form-control", id: "search-input") %>
				</div>
					<%= submit_tag("Search", class: "btn btn-primary search-page-btn") %>
			<% end %>	
		<br/>
		<br/>
		<%= image_tag("yelp_powered_btn_light.png", alt: "powered by yelp") %>		
	</div>
</div>
<br/>
