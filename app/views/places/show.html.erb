<h1><%= @name %></h1>
<p><%= @address %></p>
<p><%= @city %>, <%= @state %> <%= @zip %></p>

<%= form_for :place do |place| %>
	<%= place.hidden_field :place_id, value: @place_id %>
	<%= place.hidden_field :name, value: @name %>
	<%= place.hidden_field :address, value: @address %>
	<%= place.hidden_field :city, value: @city %>
	<%= place.hidden_field :state, value: @state %>
	<%= place.hidden_field :zip, value: @zip %>
	<%= place.hidden_field :image, value: @image %>
	<%= submit_tag("Rate this place") %>
<% end %>
<br />

<h3>Ratings</h3>
<br/>
<% @reviews.each do |review| %>
	<div class="container" id="each-review">
		<div class="row">
			<div class="col-md-9">
				<h4>Submitted by <%= review.user.username %></h4>
				<p id="review-comments"><%= review.comments %></p>
			</div>

			<div class="col-md-3">
				<div class="panel panel-default">
					<ul class="list-group">
						<li class="list-group-item">
							<span class="badge"><%= review.food %></span>
							Food
						</li>
						<li class="list-group-item">
							<span class="badge"><%= review.drinks %></span>
							Drinks
						</li>
						<li class="list-group-item">
							<span class="badge"><%= review.service %></span>
							Service
						</li>
						<li class="list-group-item">
							<span class="badge"><%= review.atmosphere %></span>
							Atmosphere
						</li>
						<li class="list-group-item">
							<span class="badge"><%= review.gluten %></span>
							Gluten-free options
						</li>
						<li class="list-group-item">
							<span class="badge"><%= review.family %></span>
							Family-friendly
						</li>
						<li class="list-group-item">
							<span class="badge"><%= review.dog %></span>
							Dog-friendly
						</li>
						<li class="list-group-item">
							<span class="badge"><%= review.parking %></span>
							Parking
						</li>
					</ul>

				</div>
			</div>

		</div>
	</div>
<% end %>